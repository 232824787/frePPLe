	    <end>2007-01-10T00:00:00</end>
	    <quantity>100</quantity>
	    <locked>true</locked>
	  </operation_plan>
	  <operation_plan id="2002" operation="supply 2">
	    <start>2007-01-17T00:00:00</start>
	    <end>2007-01-17T00:00:00</end>
	    <quantity>50</quantity>
	    <locked>true</locked>
	  </operation_plan>
	</operation_plans>
	<!-- DYNAMIC data CASE 3 -->
	<demands>
	  <demand name="order for item 3">
	    <quantity>100</quantity>
	    <due>2007-01-10T00:00:00</due>
	    <item name="item 3" />
	  </demand>
	</demands>
	<operation_plans>
	  <operation_plan id="3001" operation="supply 3">
	    <start>2007-01-15T00:00:00</start>
	    <end>2007-01-15T00:00:00</end>
	    <quantity>1000</quantity>
