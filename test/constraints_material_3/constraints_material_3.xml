	          <VALUE>4</VALUE>
	        </BUCKET>
	      </BUCKETS>
	    </MINIMUM>
	    <ONHAND>10</ONHAND>
	  </BUFFER>
	  <BUFFER NAME="constraint buffer 2">
	    <ITEM NAME="item 2" />
	  </BUFFER>
	  <BUFFER NAME="buffer 3">
	    <ITEM NAME="item 3" />
	    <PRODUCING NAME="make 3" />
	    <MINIMUM NAME="min inv for buffer 3" xsi:type="CALENDAR_FLOAT">
	      <BUCKETS>
	        <BUCKET START="2006-01-01T00:00:00">
	          <VALUE>4</VALUE>
	        </BUCKET>
	        <BUCKET START="2006-01-12T00:00:00">
	          <VALUE>2</VALUE>
	        </BUCKET>
	      </BUCKETS>
	    </MINIMUM>
	    <ONHAND>10</ONHAND>
	  </BUFFER>
	  <BUFFER NAME="constraint buffer 3">
