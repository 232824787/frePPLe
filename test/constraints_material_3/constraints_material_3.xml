	  <FLOW xsi:type="FLOW_END">
	    <OPERATION NAME="make 3" />
	    <BUFFER NAME="buffer 3" />
	    <QUANTITY>2</QUANTITY>
	  </FLOW>
	  <FLOW xsi:type="FLOW_START">
	    <OPERATION NAME="make 3" />
	    <BUFFER NAME="constraint buffer 3" />
	    <QUANTITY>-2</QUANTITY>
	  </FLOW>
