	  </demand>
	</demands>
	<operation_plans>
	  <operation_plan id="4001" operation="supply 4">
	    <start>2007-01-15T00:00:00</start>
	    <end>2007-01-15T00:00:00</end>
	    <quantity>1000</quantity>
	    <locked>true</locked>
	  </operation_plan>
	</operation_plans>
</plan>
