<?xml version="1.0" encoding="UTF-8" ?>
<plan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <name>actual plan</name>
  <description>
    resource constraint test model.
    This test shows a complex load profile and interaction between material
    and capacity constraints. A few passes of the solver are required to fill
    the available capacity slots.
  </description>
  <current>2007-01-01T00:00:00</current>
  <commands>
    <verbose>true</verbose>
    <command xsi:type="command_solve">
      <solver name="MRP" xsi:type="solver_mrp" constraints="7" loglevel="2"/>
    </command>
    <command xsi:type="command_saveplan">
      <filename>output.1.xml</filename>
    </command>
  </commands>
  <operations>
    <operation name="make end item" xsi:type="operation_time_per">
      <duration_per>P1D</duration_per>
    </operation>
  </operations>
  <items>
    <item name="end item">
      <operation name="delivery end item" xsi:type="operation_fixed_time">
        <duration>PT0S</duration>
      </operation>
    </item>
    <item name="component"/>
  </items>
  <buffers>
    <buffer name="end item">
      <producing name="make end item" />
      <item name="end item" />
    </buffer>
    <buffer name="component">
      <producing name="buy component" xsi:type="operation_fixed_time">
        <duration>P10D</duration>
      </producing>
      <item name="component" />
      <onhand>10</onhand>
    </buffer>
  </buffers>
  <resources>
    <resource name="Resource">
      <maximum name="Capacity" xsi:type="calendar_double">
        <buckets>
          <bucket start="2004-01-01T00:00:00">
            <value>3</value>
          </bucket>
        </buckets>
      </maximum>
      <loads>
        <load>
          <operation name="make end item" />
        </load>
      </loads>
    </resource>
  </resources>
  <flows>
    <flow xsi:type="flow_start">
      <operation name="delivery end item" />
      <buffer name="end item" />
      <quantity>-1</quantity>
    </flow>
    <flow xsi:type="flow_end">
      <operation name="make end item" />
      <buffer name="end item" />
      <quantity>1</quantity>
    </flow>
    <flow xsi:type="flow_end">
      <operation name="buy component" />
      <buffer name="component" />
      <quantity>1</quantity>
    </flow>
    <flow xsi:type="flow_start">
      <operation name="make end item" />
      <buffer name="component" />
      <quantity>-1</quantity>
    </flow>
  </flows>
  <demands>
    <!-- No mat or cap problem -->
    <demand name="order 1">
      <quantity>10</quantity>
      <due>2007-01-20T00:00:00</due>
      <priority>1</priority>
      <item name="end item" />
    </demand>
    <!-- No mat or cap problem -->
    <demand name="order 2">
      <quantity>5</quantity>
      <due>2007-01-17T00:00:00</due>
      <priority>2</priority>
      <item name="end item" />
    </demand>
    <!-- No mat or cap problem -->
    <demand name="order 3">
      <quantity>2</quantity>
      <due>2007-01-16T00:00:00</due>
      <priority>3</priority>
      <item name="end item" />
    </demand>
    <!-- Creates a capcity overload, and needs to be planned late.
        Planning earlier is not possible due to material constraints.
    -->
    <demand name="order 4">
      <quantity>8</quantity>
      <due>2007-01-18T00:00:00</due>
      <priority>4</priority>
      <item name="end item" />
    </demand>
  </demands>
</plan>
