<plan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <logfile>frepple.log</logfile>
  <commands>
    <verbose>true</verbose>
    <!--
      Update this section when you define new input mappings.
      Every input mapping should have an appropriate command to read the file
      with the same name.
    -->
    <command xsi:type="command_readxml"
      filename="frepple.xml"
      validate="true" />
    <!-- Run the solver. -->
    <command xsi:type="command_solve">
      <solver name="MRP" xsi:type="solver_mrp"
        constraints="7" VERBOSE="true"/>
    </command>
    <!--
      Update this section when you define new output mappings.
      Every output mapping should have an appropriate command to save the file
      with the same name.
    -->
    <command xsi:type="command_save"
      filename="output_with_pegging.xml"
      content="PLANDETAIL" />
    <command xsi:type="command_save"
      filename="output.xml"
      content="PLAN" />
    <!--
      Prints some information about the memory consumption into the logfile.
    -->
    <command xsi:type="command_size"/>
  </commands>
</plan>