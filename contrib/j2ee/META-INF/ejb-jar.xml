<?xml version="1.0"?>
<!DOCTYPE ejb-jar PUBLIC 
          "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
          "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
    <display-name>chapter 12 EJB JAR</display-name>
    <enterprise-beans>
        <session>
        	<description>A stateless session bean as a Frepple wrapper</description>
            <ejb-name>FreppleStatelessSessionBean</ejb-name>
     		<home>frepple.ejb.StatelessSessionBeanRemoteHome</home>
     		<remote>frepple.ejb.StatelessSessionBeanRemote</remote>
     		<local-home>frepple.ejb.StatelessSessionBeanLocalHome</local-home>
     		<local>frepple.ejb.StatelessSessionBeanLocal</local>
            <ejb-class>frepple.ejb.StatelessSessionBean</ejb-class>
			<session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
			<env-entry>
  				<env-entry-name>Frepple/BackendConnection</env-entry-name>
  				<env-entry-type>java.lang.String</env-entry-type>
  				<env-entry-value>frepple.backend.webservice.connection</env-entry-value>
			</env-entry>            
     		<security-identity><use-caller-identity/></security-identity>
        </session>
        <message-driven>
            <ejb-name>FreppleMessageBean</ejb-name>
            <ejb-class>frepple.jms.MessageBean</ejb-class>
            <transaction-type>Container</transaction-type>
            <acknowledge-mode>AUTO_ACKNOWLEDGE</acknowledge-mode>
            <message-driven-destination>
                <destination-type>javax.jms.Queue</destination-type>
            </message-driven-destination>          
            <resource-ref>
                <res-ref-name>jms/QCF</res-ref-name>
                <res-type>javax.jms.QueueConnectionFactory</res-type>
                <res-auth>Container</res-auth>
            </resource-ref>
        </message-driven>
    </enterprise-beans>
</ejb-jar>

